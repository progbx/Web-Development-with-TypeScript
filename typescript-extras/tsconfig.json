{
  "exclude": ["test-utils", "./dist/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictFunctionTypes": true,
    "emitDeclarationOnly": true
  }
}
